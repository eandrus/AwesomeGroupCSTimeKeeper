@model CSTimeKeeper.Models.InstructorRequestsViewModel

@{
    ViewData["Title"] = "Instructor Requests";
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

<h2>Instructor Requests</h2>

@if (Model.Requests.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Requests)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@item.Id" title="Approve This Request">Approve</a>
                        <a class="btn btn-danger" asp-action="DenyRequest" asp-route-id="@item.Id" title="Deny This Request">Deny</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a class="btn btn-success" asp-action="ApproveAllRequests">Approve All Requests</a>
}
else
{
    <h3 class="text-danger">There are no pending Instructor Account Requests</h3>
}
